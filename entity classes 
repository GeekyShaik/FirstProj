import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

@Repository
public interface OmGroupDefinitionRepository extends JpaRepository<OmGroupDefinition, OmGroupDefinitionId> {
    // The search method specified in the image suggests a custom query that would involve a join and selection based on the group name and variable repository name.
    // Example of a custom method (the actual implementation may vary based on the exact requirements and business logic):
    @Query("SELECT ogd FROM OmGroupDefinition ogd JOIN OmGroupTemplateRltn ogrt ON ogd.groupNm = ogrt.groupNm AND ogd.variableRepositoryNm = ogrt.variableRepositoryNm WHERE ogd.groupNm = :groupNm AND ogd.variableRepositoryNm = :variableRepositoryNm")
    List<OmGroupDefinition> findByGroupNameAndVariableRepositoryName(@Param("groupNm") String groupNm, @Param("variableRepositoryNm") String variableRepositoryNm);
}

@Repository
public interface OmGroupTemplateRltnRepository extends JpaRepository<OmGroupTemplateRltn, OmGroupTemplateRltnId> {
    // Similarly, if there's a need for a custom search or join operation, you can define a custom method here.
    // Example of a custom method (the actual implementation may vary based on the exact requirements and business logic):
    @Query("SELECT ogrt FROM OmGroupTemplateRltn ogrt WHERE ogrt.omTemplateNm = :omTemplateNm AND ogrt.omTemplateVersionNr = :omTemplateVersionNr")
    List<OmGroupTemplateRltn> findByTemplateNmAndVersion(@Param("omTemplateNm") String omTemplateNm, @Param("omTemplateVersionNr") Integer omTemplateVersionNr);
}